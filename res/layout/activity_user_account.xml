<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="horizontal">
	    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"  
	    android:orientation="vertical" >
	   
		<FrameLayout android:id='@+id/bannerView'
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	        
	    	<TextView android:id="@+id/activity_user_account_name_banner"
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:gravity="center"
	        	android:background="@drawable/accfunction_button_default" />
	
		    <TextView
		        android:id="@+id/activity_user_account_name_text"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:fontFamily="sans-serif"
		        android:foreground="@id/activity_user_account_name_banner"
		        android:gravity="center"
		        android:textColor="#FFFFFF"
		        android:textSize="24sp" />
	    
	    </FrameLayout>
	    
	    <FrameLayout android:id='@+id/balanceView'
		    android:layout_marginTop="16dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
		    <TextView
		        android:id="@+id/activity_user_balance_text"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:fontFamily="sans-serif"
		        android:foreground="@id/activity_user_account_name_banner"
		        android:gravity="center"
		        android:text=""
		        android:textColor="#000000"
		        android:textSize="30sp" />
	    </FrameLayout>
	    
	    <TextView
		        android:id="@+id/activity_user_history"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:fontFamily="sans-serif"
		        android:foreground="@id/activity_user_account_name_banner"
		        android:gravity="center"
		        android:text="@string/user_account_activity"
		        android:textColor="#000000"
		        android:textSize="20sp" />
	    
		<LinearLayout 
		    	android:id="@+id/user_account_history"
				android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:paddingTop="@dimen/activity_vertical_margin" 
		        android:orientation="vertical" >
		</LinearLayout>
	    
		<!-- <Button
		    android:id="@+id/activity_user_account_debit"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="40dp"
		    android:background="@drawable/accfunction_button_default"
		    android:text="Withdraw" 
		    android:fontFamily="sans-serif"
		    android:textColor="#FFFFFF"
		    android:textSize="24sp"
		    android:onClick="userAccountDebit"/>
	
		<Button
		    android:id="@+id/activity_user_account_credit"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="16dp"
		    android:background="@drawable/accfunction_button_default"
		    android:text="Deposit" 
		    android:fontFamily="sans-serif"
		    android:textColor="#FFFFFF"
		    android:textSize="24sp"
		    android:onClick="userAccountCredit"/>
		
		<Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="16dp"
		    android:background="@drawable/accfunction_button_default"
		    android:text="Transfer Funds" 
		    android:fontFamily="sans-serif"
		    android:textColor="#FFFFFF"
		    android:textSize="24sp" />
		
		<Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="16dp"
		    android:background="@drawable/accfunction_button_default"
		    android:text="Statement" 
		    android:fontFamily="sans-serif"
		    android:textColor="#FFFFFF"
		    android:textSize="24sp" />  -->
		
	</LinearLayout>
</ScrollView>
